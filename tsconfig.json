{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",                // Asegura que los módulos se resuelvan correctamente
    "resolveJsonModule": true,                 // Permite importar archivos JSON
    "allowSyntheticDefaultImports": true,      // Mejora compatibilidad con imports por defecto
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]                          // Asegura que los tipos de Node.js estén disponibles
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
